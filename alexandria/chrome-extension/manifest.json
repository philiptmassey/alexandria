{
  "manifest_version": 3,
  "name": "Alexandria",
  "version": "0.1.0",
  "description": "Save the current tab to Alexandria.",
  "action": {
    "default_title": "Archive",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://alexandria-psi.vercel.app/*"
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
